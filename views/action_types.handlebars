<link rel="stylesheet" href="/css/form.css">

<h1>{{title}}</h1>

<div class = "operationPicker">{{>operationPicker}}</div>

  <div id="createForm" style="display: none;" class = "inputForm">
    <!-- Create Entry Form -->
    <h2>Create Action Type</h2>
    <form method="POST" action="action_types/create">
        <label for="action_type_name">Name:</label>
        <input type="text" id="action_type_name" name="name" required>
        <button type="submit">Create</button>
    </form>
  </div>

  <div id="updateForm" style="display: none;" class = "inputForm">
    <!-- Update Entry Form -->
    <h2>Update Action Type</h2>
    <form method="POST" action="action_types/update">
        <label for="action_type_id">ID:</label>
        <select id="action_type_id_select" name="action_type_id" required>
            <option disabled selected value>Action Type ID</option>
            {{#each entries}}
            {{#if this.action_type_id}}
            <option value="{{this.action_type_id}}">{{this.action_type_id}}</option>
            {{/if}}
            {{/each}}
        </select>
        <label for="action_type_name">Name:</label>
        <input type="text" id="action_type_name" name="name">
      <button type="submit">Update</button>
    </form>
  </div>

  <table id="action_types_table">
        <thead>
            <tr>
                <th color="blue">ID</th>
                <th>Action Type</th>
            </tr>
        </thead>
        <tbody>
            {{#each entries}}
            {{#if this.action_type_id}}
            <tr>
                <td>{{this.action_type_id}}</td>
                <td>{{this.name}}</td>
                 <td>
                    <form method="POST" action="action_types/delete">
                        <input style="display: none;" type="number" name="deleteId" value = {{this.action_type_id}}>
                        <button type="submit" class="submitButton">Delete</button>
                    </form>
                </td>
            </tr>
            {{/if}}
            {{/each}}
        </tbody>
</table>

